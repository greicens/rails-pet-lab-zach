<%= form_for @owner do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_digest, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <%= f.submit "Login", class: "btn btn-block btn-success" %>
  </div>
<% end %>
